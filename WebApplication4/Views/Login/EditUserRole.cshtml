@model WebApplication4.Models.LoginUsers.User

@{
    ViewBag.Title = "EditUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;">Ispravka korisničke uloge</h2>



<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-8 col-lg-12 col-md-9">

            @{
                if (TempData["MessageUserRoleChangedEmpty"] != null)
                {
                    <div class="alert alert-secondary" style="text-align:center;">
                        <strong>@TempData["MessageUserRoleChangedEmpty"]</strong>
                    </div>
                }
            }

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
                        <div class="col-lg-12">
                            <div class="p-5">
                                <h4>
                                    Korisničke uloge
                                </h4>
                                <hr />
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)


                                    <div style="text-align:center;">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.DropDownList("RoleId", (SelectList)ViewBag.RoleId, "--Izaberite vrednost--", htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div style="text-align:center;">
                                        <a class="btn btn-primary btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                            <input type="submit" value="Sacuvaj" class="btn btn-primary" style="float:right;" />
                                        </a>

                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div style="text-align:center;">

    @using (Html.BeginForm("Index", "Login", FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        <a class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <input type="submit" value="Povratak na listu korisnika" class="btn btn-primary" />
        </a>

    }
</div>