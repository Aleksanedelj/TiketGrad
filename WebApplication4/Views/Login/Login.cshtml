@model WebApplication4.Models.LoginUsers.Login

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-12 col-md-9">

                @{
                    if (TempData["MessageLoginSuccess"] != null)
                    {
                        <div class="alert alert-success" style="text-align:center;">
                            <strong>@TempData["MessageLoginSuccess"]</strong>
                        </div>
                    }
                }

                @{
                    if (TempData["MessageLoginErrorData"] != null)
                    {
                        <div class="alert alert-secondary" style="text-align:center;">
                            <strong>@TempData["MessageLoginErrorData"]</strong>
                        </div>
                    }
                }

                @{
                    if (TempData["MessageRegisterSuccess"] != null)
                    {
                        <div class="alert alert-success" style="text-align:center;">
                            <strong>@TempData["MessageRegisterSuccess"]</strong>
                        </div>
                    }
                }

                @{
                    if (TempData["ChangePasswordSuccess"] != null)
                    {
                        <div class="alert alert-success" style="text-align:center;">
                            <strong>@TempData["ChangePasswordSuccess"]</strong>
                        </div>
                    }
                }

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Dobro dosli!</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-12 text-lg-center" })
                                            <div class="">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-12 text-lg-center">Šifra</label>
                                            <div class="">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2">
                                                <input type="submit" value="Prijavi se" class="btn btn-primary btn-user btn-block" />
                                            </div>
                                        </div>
                                        <hr>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("ForgotPassword", "Login")">Zaboravili ste sifru?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Register", "Login")">Kreirajte nalog!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
}