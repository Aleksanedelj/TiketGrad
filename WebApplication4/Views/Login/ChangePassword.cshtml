@model WebApplication4.Models.LoginUsers.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}

@{
    if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            <strong>@TempData["message"]</strong>
        </div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-8 col-lg-12 col-md-9">

                @{
                    if (TempData["MessageLoginErrorData"] != null)
                    {
                        <div class="alert alert-secondary" style="text-align:center;">
                            <strong>@TempData["MessageLoginErrorData"]</strong>
                        </div>
                    }
                }

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Promena šifre</h1>
                                    </div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <form class="user">
                                        <div class="form-group">
                                            Trenutna šifra
                                            <div class="">
                                                @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            Nova šifra
                                            <div class="">
                                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            Potvrda nove šifre
                                            <div class="">
                                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2">
                                                <input type="submit" value="Promeni šifru" class="btn btn-primary btn-user btn-block" /> <br />
                                                <a class="btn btn-google btn-user" href="@Url.Action("Details", "Login")" style="width:100%;">Povratak na stranicu profila</a>
                                            </div> 
                                        </div>
                                      
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
}