@{
    ViewData["Title"] = "Forgot Password";
}

<h2 style="text-align:center;">Obnova lozinke</h2>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-12 col-md-9">

            @{
                if (TempData["tokenmessage"] != null)
                {
                    <div class="alert alert-secondary" style="text-align:center;">
                        <strong>@TempData["tokenmessage"]</strong>
                    </div>
                }

                if (TempData["usernotvalid"] != null)
                {
                    <div class="alert alert-secondary" style="text-align:center;">
                        <strong>@TempData["usernotvalid"]</strong>
                    </div>
                }
            }

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">

                                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        <label for="email">Email adresa:</label>
                                        <input type="email" id="email" name="email" class="form-control" required />
                                    </div>

                                    <button type="submit" class="btn btn-primary" style="width:100%">Pošalji zahtev</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
